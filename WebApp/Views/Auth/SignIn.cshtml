
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Models.SignInViewModel
@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Log In";
}

<div class="center-screen">
    <section id="login">
        <form class="surface" asp-controller="Auth" asp-action="SignIn" method="post" novalidate enctype="multipart/form-data">
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl">
            
            <h1>@ViewData["Title"]</h1>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email"/>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password"/>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            
            <div class="form-check">
                <input class="form-check-input" asp-for="IsPersistent" />
                <label asp-for="IsPersistent" class="form-check-label">Remember me</label>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="alert error">
                    @ViewBag!.ErrorMessage
                </div>
            }
            
            <div class="form-group">
                <button type="submit" class="btn btn-submit btn-blue">Log In</button>
            </div>
            
            <div class="form-footer">
                <span>Don't you have an account?</span>
                <a asp-controller="Auth" asp-action="SignUp">Sign Up</a>
            </div>
        </form>
    </section>

</div>