@*
@using Domain.Models
*@
@model MemberLoginForm
@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Log In";
}

<div class="center-screen">
    <section id="login">
        <form class="surface" asp-controller="Auth" asp-action="Login" method="post" novalidate enctype="multipart/form-data">

            @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
            {
                <div class="alert error">
                    @ViewBag!.ErrorMessage
                </div>
            }

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-submit btn-blue">Log In</button>
            </div>
        </form>
    </section>

</div>