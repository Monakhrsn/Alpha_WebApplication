@using Domain.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Models.AddProjectViewModel

<div id="add-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button type="button" class="btn-close" data-close="true" data-type="modal" data-target="#add-project-modal" ></button>
        </div>
        
        <form id="modal-form" class="card-body" novalidate method="post" enctype="multipart/form-data" asp-action="Add" data-type="modal" asp-controller="Projects">
            <div class="image-previewer square">
                <img class="image-preview" src=""  alt=""/>
                <input asp-for="Image" accept="image/*" class="hide">
            </div>
            <div class="form-group">
                <label  asp-for="ProjectName" ></label>
                <div class="field-group">
                    <input asp-for="ProjectName" />
                    <span asp-validation-for="ProjectName"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="ClientId"></label>
                <div class="form-select" data-placeholder="Choose a client">
                    <button type="button" class="form-select-trigger">
                        <span class="form-select-text"></span>
                    </button>
                    <ul class="form-select-options">
                        @foreach (var client in (IEnumerable<Client>)ViewBag.Clients)
                        {
                            <li class="form-select-option" data-value="@client.Id">
                                @client.Name
                            </li>
                        }
                    </ul>
                    <input type="hidden" asp-for="ClientId" />
                </div>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Description"></label>
                <input type="hidden" id="add-project-description" asp-for="Description"/>
                <div id="add-project-description-wysiwyg-editor" class="wysiwyg-editor"></div>
                <div id="add-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                    <span class="ql-formats">
                      <button class="ql-bold"></button>
                      <button class="ql-italic"></button>
                      <button class="ql-underline"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-align" value=""></button>
                      <button class="ql-align" value="center"></button>
                      <button class="ql-align" value="right"></button>
                    </span>
                    <span class="ql-formats">
                      <button class="ql-list" value="bullet"></button>
                      <button class="ql-list" value="ordered"></button>
                    </span>
                    <span class="ql-formats">
                        <button class="ql-link"></button>
                    </span>
                </div>
            </div>
            
            <div class="form-horizontal-group">
                <div class="form-group">
                    <label class="form-label" asp-for="StartDate"></label>
                    <input class="form-input" asp-for="StartDate" />
                    <span asp-validation-for="StartDate"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="EndDate"></label>
                    <input class="form-input" asp-for="EndDate" />
                    <span asp-validation-for="EndDate"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" >Member</label>
                <div class="form-select" data-placeholder="Choose a member">
                    <button type="button" class="form-select-trigger">
                        <span class="form-select-text"></span>
                    </button>
                    <ul class="form-select-options">
                        <li class="form-select-option" data-value="1">John Doe</li>
                        <li class="form-select-option" data-value="2">Sara Caner</li>
                    </ul>
                    <input type="hidden" name="member-select-value" />
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label" asp-for="Budget"  ></label>
                <div class="field-group">
                    <input class="form-input" asp-for="Budget" />
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                        <span asp-validation-for="Budget"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Create</button>
        </form>
    </div>
</div>