<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Alpha Portal</title>
    <script type="importmap"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
<div class="portal">
    <aside class="side">
        <partial name="Partials/Components/_AlphaLogoType" />
        <partial name="Partials/Components/_NavLinks"/>
    </aside>
    <header class="header" id="header">
        <form class="search-form" method="get" asp-controller="" asp-action="" novalidate>
            <i class="fa-solid fa-magnifying-glass"></i>
            <input type="search" class="form-search-input" placeholder="Search anything..."/>
        
        </form>
        <div id="notification-container">
            <button type="button" data-type="dropdown" data-target="#notification-dropdown" class="btn-notification">
                <i class="dot dot-red fa-solid fa-circle show"></i>
                <i class="fa-solid fa-bell"></i>
            </button>
            <div id="notification-dropdown" class="dropdown dropdown-show">
                <div class="dropdown-header">
                    <h4>Notifications</h4>
                    <div class="badge badge-red">0</div>
                </div>
                <div class="divider"></div>
                <div class="notifications">
                    <div class="notification" data-notification-type="user">
                        <div class="user-image">
                            <img src="/images/avatars/woman-long.svg" alt="template-avatar"/>
                        </div>
                            <span class="message">Sarah Caner signed in.</span>
                            <span class="time">10 min ago</span>
                            <button class="btn-close"></button>
                        
                    </div>
                </div>
            </div>
        </div>
        <div id="account-container">
            <button type="button" data-type="dropdown" data-target="#account-dropdown" class="btn-account">
                <img src="/images/avatars/woman-long.svg" alt="template-avatar" />
            </button>
            <div id="account-dropdown" class="dropdown dropdown-show">
                <div class="dropdown-header">
                    <div class="account-name">
                        <img src="/images/avatars/woman-long.svg" alt="template-avatar" />
                        <span>Sarah Caner</span>
                    </div>
                </div>
                <div class="dropdown-body">
                    <nav class="dropdown-options">
                        <div for="darkModeToggle" class="dropdown-option">
                            <label class="swich-label" >
                                <i class="fa-duotone fa solid fa-cog"></i>
                                <span>Dark Mode</span>
                            </label>
                            <label class="switch">
                                <input type="checkbox" id="darkModeToggle" data-type="toggle" data-func="darkmode"/>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </nav>
                </div>
                <div class="divider"></div>
                <nav class="dropdown-actions">
                    <a class="dropdown-action" data-type="dropdown" asp-controller="Auth" asp-action="Logout">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span>Log out</span>
                    </a>
                </nav>
            </div>
        </div>
    </header>
    <main class="main">
        @RenderBody()
    </main>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/8c6b7f254e.js" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>